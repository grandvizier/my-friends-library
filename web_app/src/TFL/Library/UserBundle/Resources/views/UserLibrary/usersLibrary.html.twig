{% extends '::base.html.twig' %}

{% block title %}TFL - {{ user.username }}'s Library{% endblock %}

{% block body %}
	<h2>{{ user.username }}'s Library</h2>
	<h3>borrowed books</h3>
	{% for item in books_borrowed %}
		{{ dump(item.user_book.book.title) }} <hr/>
	{% endfor %}
	<ul>
	{% for book_owner in books_owned %}
		<li class="book">
			<h3>{{ book_owner.book.title }}</h3>
			<h4>{{ book_owner.book.author }}</h4>
			<img src="{{ book_owner.book.image }}" alt="{{ book_owner.book.title }}" />
		</li>
	{% endfor %}
	</ul>
{% endblock %}

